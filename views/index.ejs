<%- include('partials/header') -%>

<%- include('partials/message') -%>
<div class="container mt-5">
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>Code</th>
                <th>Description</th>
                <th>Price</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach((user)=> { %>
                <tr>
                    <td><%= user.code %></td>
                    <td><%= user.description %></td>
                    <td><%= user.price %>$</td>
                    <td>
   
                       <form style="display: inline;" action="/delete/<%= user.id %>?_method=DELETE" method="POST">
                            <button style="cursor: pointer;" type="submit" class="btn btn-danger ml-2">Delete</button>
                        </form>
                        <form style="display: inline;" action="/edit" method="POST">
                            <button style="cursor: pointer;" type="submit" class="btn btn-primary ml-2">Edit</button>
                        </form>
                    </td>
                </tr>
           <% }) %>
        </tbody>

    </table>
</div>

<%- include('partials/footer') -%>